<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
       android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textDailogName_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contarc Name"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="90dp"
            />

        <TextView
            android:id="@+id/textDailogPhone_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:text="Phone Num"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/buttonDialogCall_id"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/dialog_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Mobile Call"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonDialogMessage_id"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Use Messanger" />




    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dailogImageCircle_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/dartlogo"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"

        />





</RelativeLayout>