<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundfragment">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraint_contact_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundfragment"
        android:padding="5dp">


        <ImageView
            android:id="@+id/imageContactCallBack_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/call_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textMainCountryContact_id"
            app:layout_constraintRight_toLeftOf="@id/textSubTitleContact_id"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/textSubTitleContact_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="120dp"
            android:text="phone num here"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toRightOf="@id/imageContactRow_id"
            app:layout_constraintRight_toLeftOf="@+id/imageContactCallBack_id"
            app:layout_constraintTop_toBottomOf="@id/textMainCountryContact_id" />

        <TextView
            android:id="@+id/textMainCountryContact_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="145dp"
            android:text="Contact Num"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/imageContactRow_id"
            app:layout_constraintRight_toLeftOf="@+id/imageContactCallBack_id"
            app:layout_constraintTop_toTopOf="parent"

            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageContactRow_id"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintRight_toLeftOf="@+id/textMainCountryContact_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>